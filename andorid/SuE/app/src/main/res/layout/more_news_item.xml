<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:orientation="horizontal"
        android:padding="@dimen/padding_20dp"
        >

        <ImageView
            android:id="@+id/news_img"
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@drawable/login_top_img"
            android:scaleType="fitXY"
            />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/padding_5dp"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/textSize_18"
                android:textStyle="bold"
                tools:text="@string/titile_jkzx"
                />

            <TextView
                android:id="@+id/news_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_title"
                android:textSize="@dimen/textSize_12"
                tools:text="@string/titile_jkzx"
                />
            <TextView
                android:id="@+id/news_date"
                android:layout_below="@id/news_details"
                android:padding="@dimen/padding_5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_10"
                tools:text="2017-10-10"
                />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Banner style -->
    <!--避免第一次进来白屏或黑屏-->
    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TitleBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/titlebar_height</item>
    <item name="android:background">@color/titleBar</item>
    <item name="bgatitlebar_leftAndRightTextColor">@color/colorWhite</item>
    <item name="bgatitlebar_leftAndRightTextSize">@dimen/textSize_16</item>
    <item name="bgatitlebar_titleTextColor">@color/colorWhite</item>
    <item name="bgatitlebar_titleTextSize">@dimen/textSize_18</item>
    <item name="bgatitlebar_leftAndRightPadding">@dimen/large</item>

    </style>

    <!--热门模块的标题容器-->
    <style name="rl_layout_popular_module_title_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--热门模块的下面按钮-->
    <style name="tv_layout_popular_module_btn" parent="tv_base_btn">
        <item name="android:layout_marginBottom">@dimen/padding_5dp</item>
        <item name="android:layout_marginLeft">@dimen/padding_10dp</item>
        <item name="android:layout_marginRight">@dimen/padding_10dp</item>
        <item name="android:layout_marginTop">@dimen/padding_5dp</item>
        <item name="android:paddingTop">@dimen/padding_2dp</item>
        <item name="android:paddingBottom">@dimen/padding_2dp</item>
        <item name="android:paddingRight">@dimen/padding_2dp</item>
        <item name="android:paddingLeft">@dimen/padding_2dp</item>
    </style>

    <style name="tv_layout_popular_module_text" parent="tv_base_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/padding_5dp</item>
        <item name="android:layout_marginLeft">@dimen/padding_10dp</item>
        <item name="android:layout_marginRight">@dimen/padding_10dp</item>
        <item name="android:layout_marginTop">@dimen/padding_5dp</item>
        <item name="android:paddingTop">@dimen/padding_2dp</item>
        <item name="android:paddingBottom">@dimen/padding_2dp</item>
        <item name="android:paddingRight">@dimen/padding_2dp</item>
        <item name="android:paddingLeft">@dimen/padding_2dp</item>
    </style>

    <!--热门模块的标题-->
    <style name="tv_layout_popular_module_title" parent="tv_base_text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:paddingLeft">@dimen/padding_5dp</item>
        <item name="android:paddingRight">@dimen/padding_5dp</item>
        <item name="android:paddingTop">@dimen/padding_2dp</item>
        <item name="android:paddingBottom">@dimen/padding_2dp</item>
    </style>


</resources>
